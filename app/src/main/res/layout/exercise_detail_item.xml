<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="1dp"
    app:cardCornerRadius="3dp">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exerciseRep"/>
        <TextView
            android:id="@+id/exerciseMulti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:layout_toRightOf="@id/exerciseRep"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:padding="10dp" />
        <NumberPicker
            android:id="@+id/exerciseWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/exerciseMulti"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kg"
            android:layout_toRightOf="@id/exerciseWeight"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:padding="10dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
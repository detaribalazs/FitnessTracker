<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/workoutCard"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="1dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/workoutFrameRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:id="@+id/workoutTypeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="Type"
            android:textSize="@dimen/workoutTitleSize"
            android:padding="6dp"/>

        <!-- -->
        <TextView
            android:id="@+id/workoutDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/workoutTypeTV"
            android:text="Date"
            android:textSize="20dp"
            android:padding="2dp"/>

        <ImageView
            android:id="@+id/detailsIV"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_keyboard_arrow_right_dark" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
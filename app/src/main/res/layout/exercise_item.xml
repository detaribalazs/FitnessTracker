        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/workoutCard"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            android:layout_weight="5"
            card_view:cardCornerRadius="5dp">

            <RelativeLayout
                android:id="@+id/exerciseFrameRL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:id="@+id/exerciseTypeTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:text="Name"
                    android:textSize="20dp"
                    android:padding="6dp"/>

                <TextView
                    android:id="@+id/exerciseRepsTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/exerciseTypeTV"
                    android:text="Reps"
                    android:textSize="20dp"
                    android:padding="2dp"/>

                <ImageView
                    android:id="@+id/detailsIV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/exerciseRepsTV"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_keyboard_arrow_down_dark" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
